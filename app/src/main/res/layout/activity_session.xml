<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.SessionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="@string/email_string"
            android:textStyle="bold"
            android:textSize="8pt"/>
        <EditText
            android:id="@+id/email_session_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_string"
            android:textSize="16pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="@string/password_string"
            android:textStyle="bold"
            android:textSize="8pt"/>
        <EditText
            android:id="@+id/password_session_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_string"
            android:textSize="16pt"/>

        <Button
            android:id="@+id/save_session_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_session_string"/>
    </LinearLayout>

</LinearLayout>